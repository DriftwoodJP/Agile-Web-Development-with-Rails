<div class="depot_form">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>ユーザー情報の入力</legend>
  <dl>
    <dt><%= f.label :name %></dt>
    <dd><%= f.text_field :name, size: 40 %></dd>
    <% if params[:action] == :edit %>
    <dt><%= f.label :current_password, '現在のパスワード' %></dt>
    <dd><%= f.password_field :current_password, size: 40 %></dd>
    <% end %>
    <dt><%= f.label :password, 'パスワード' %></dt>
    <dd><%= f.password_field :password, size: 40 %></dd>
    <dt><%= f.label :password_confirmation, '確認' %></dt>
    <dd><%= f.password_field :password_confirmation, size: 40 %></dd>
    <dt></dt>
    <dd><%= f.submit %></dd>
  </dl>
</fieldset>
<% end %>

</div>
